# =============================================================================
# TRADING FORGE - PRODUCTION ENVIRONMENT
# Copy to .env.production and fill in all values.
# Run: cp .env.example .env.production
# =============================================================================

# =============================================================================
# DATABASE (PostgreSQL 16)
# =============================================================================
DB_USER=crypto_admin
DB_PASSWORD=                          # openssl rand -base64 32 | tr -d "=+/" | cut -c1-32
DATABASE_URL=postgresql+asyncpg://crypto_admin:CHANGE_ME@postgres:5432/crypto_platform

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=                       # openssl rand -base64 32 | tr -d "=+/" | cut -c1-32
REDIS_URL=redis://:CHANGE_ME@redis:6379/0

# =============================================================================
# JWT / AUTH
# =============================================================================
JWT_SECRET_KEY=                       # openssl rand -hex 64
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15        # Short-lived access tokens
REFRESH_TOKEN_EXPIRE_DAYS=7           # Refresh token in httpOnly cookie

# =============================================================================
# APPLICATION URLS
# Update these to match your domain + reverse proxy setup.
# Backend runs behind Nginx at /api, frontend at root.
# =============================================================================
FRONTEND_URL=https://crypto.bsapservices.com
BACKEND_URL=https://crypto.bsapservices.com/api
BACKEND_WS_URL=wss://crypto.bsapservices.com/market/ws/prices

# =============================================================================
# EMAIL (optional -- registration works without, but email verify won't send)
# =============================================================================
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=                        # Your Resend API key (re_...)
SMTP_FROM=noreply@bsapservices.com

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_SIGNUP=5/hour
RATE_LIMIT_LOGIN=10/hour

# =============================================================================
# TIER STARTING BALANCES (in cents)
# Free=$10k, Pro=$25k, Elite=$100k, Valkyrie=$500k
# =============================================================================
TIER_FREE_BALANCE=1000000
TIER_PRO_BALANCE=2500000
TIER_ELITE_BALANCE=10000000
TIER_VALKYRIE_BALANCE=50000000

# =============================================================================
# EXCHANGE API KEYS (optional -- app uses fallback prices without these)
# =============================================================================
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
COINGECKO_API_KEY=

# =============================================================================
# OPENROUTER AI (optional -- for AI trading features)
# =============================================================================
OPENROUTER_API_KEY=

# =============================================================================
# STRIPE PAYMENTS (optional -- for paid tiers)
# =============================================================================
STRIPE_RESTRICTED_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_ELITE=
STRIPE_PRICE_ID_VALKYRIE=

# =============================================================================
# BACKUP ENCRYPTION (optional -- used by scripts/backup.sh)
# Set this to encrypt .env backups with AES-256
# =============================================================================
BACKUP_ENCRYPTION_KEY=
